{{# if products}}
<center>
<h3>Favourites</h3>
</center>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{# each products}}
      <li class="list-group-item">
        
        <strong>{{this.item.title}}</strong>
        <span class="label label-success">Rs. {{this.price}}</span>
        
      </li>
      {{/each}}
    </ul>
  </div>
</div>


{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h2>No items in cart</h2>
  </div>
</div>
{{/if}}
